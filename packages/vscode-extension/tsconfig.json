{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "composite": true,
        "lib": [
            "ES2020"
        ],
        "skipLibCheck": true,
        "moduleResolution": "node",
        "tsBuildInfoFile": "./dist/.tsbuildinfo"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ],
    "references": [
        {
            "path": "../core"
        }
    ]
}